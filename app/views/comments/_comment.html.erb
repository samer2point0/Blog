<section class="comment">
  <div class="user_thumb header">
    <%=render 'shared/user_thumb', user:comment.user%>
  </div>
  <div class="commentBody">
    <%=comment.body%> <br>
    <span class="date">Posted <%=distance_of_time_in_words(comment.created_at,Time.now)%> ago</span>
  </div>
</section>
