<%provide(:title, 'Blog')%>
<article class="Article main">
  <%=render @article %>
</article>

<section id="comments">
  <header>
    <h3>Comments (<%= @article.comments.size %>) </h3>
    <%=render 'comments/form' %>
  </header>
  <div class="standalone">
    <%=render @article.comments %>
  </div>
</section>
