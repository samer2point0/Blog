<%provide(:title, 'Blog')%>

<aside id="tagside">
  <h3>Tags</h3>
  <ul class="tags">
    <% @tags.each do |tag|%>
      <%= link_to tag_path(tag) do %>
        <li class='tag'><%=tag.name %></li>
      <%end%>
    <%end%>
  </ul>
</aside>

<section id="articles">
  <% @articles.each do |article| %>
    <%= link_to (article_path(article)) do%>
      <article class="Article preview">
        <%=render article %>
      </article>
    <%end%>
  <% end%>
  <%= link_to 'Add Article', new_article_path, class:'mainbtn'%>
</section>

<footer>
</footer>
