<fieldset>

  <legend><%=@user.username ? 'Edit account' : 'Sign up'%></legend>
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
     <%=render 'shared/error_explanation', object:form.object%>
    <% end %>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username %>
    </div>
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email %>
    </div>
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
    </div>

    <%if ! logged_in? %>
      <div id="remember_me" class="field">
        <%=label_tag :remember_me, 'remember me on this computer'%>
        <%=check_box_tag :remember_me, false %>
      </div>
    <%end%>

      <%= form.submit (logged_in? ? 'Update' : 'Create!'),  class:'mainbtn'%>
  <% end %>
</fieldset>
