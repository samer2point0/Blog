<fieldset>

  <legend><%=@user.username ? 'Edit account' : 'Sign up'%></legend>
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
     <%=render 'shared/error_explanation', object:form.object%>
    <% end %>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, id: :user_username %>
    </div>
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email %>
    </div>
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password %>
    </div>

    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
    </div>

    <%if !@user.username%>
      <div id="remember_me" class="field">
        <%=form.label :remember_me, 'remember me on this computer'%>
        <%=form.check_box :remember_me%>
      </div>
    <%end%>

      <%= form.submit (@user.username ? 'Create!' : 'Update'),  class:'mainbtn'%>
  <% end %>
</fieldset>
